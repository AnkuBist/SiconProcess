<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_market_rejection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hgil.siconprocess.activity.fragments.invoice.rejActivities.FreshRejectionActivity">

    <TextView
        android:id="@+id/tvCustomerName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBackgroundBlack"
        android:elevation="5dp"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_extra_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTextGrey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:alpha="0.88"
            android:background="@color/cardview_light_background"
            android:orientation="vertical">

            <RelativeLayout style="@style/rejectionItemHolder">

                <TextView
                    style="@style/RejectionTvLabel"
                    android:text="M-Shaped" />

                <EditText
                    android:id="@+id/etMShaped"
                    style="@style/RejectionEtStyle"
                    android:text="0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBackgroundBlack" />

            <RelativeLayout style="@style/rejectionItemHolder">

                <TextView
                    style="@style/RejectionTvLabel"
                    android:text="Torn Polly" />

                <EditText
                    android:id="@+id/etTornPolly"
                    style="@style/RejectionEtStyle"
                    android:text="0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBackgroundBlack" />

            <RelativeLayout style="@style/rejectionItemHolder">

                <TextView
                    style="@style/RejectionTvLabel"
                    android:text="Fungus" />

                <EditText
                    android:id="@+id/etFungus"
                    style="@style/RejectionEtStyle"
                    android:text="0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBackgroundBlack" />

            <RelativeLayout style="@style/rejectionItemHolder">

                <TextView
                    style="@style/RejectionTvLabel"
                    android:text="Wet Bread" />

                <EditText
                    android:id="@+id/etWetBread"
                    style="@style/RejectionEtStyle"
                    android:text="0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBackgroundBlack" />

            <RelativeLayout style="@style/rejectionItemHolder">

                <TextView
                    style="@style/RejectionTvLabel"
                    android:text="Others" />

                <EditText
                    android:id="@+id/etOthers"
                    style="@style/RejectionEtStyle"
                    android:text="0" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorBackgroundBlack" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
