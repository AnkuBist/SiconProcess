<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_root_summary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextLightGrey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hgil.siconprocess.activity.temp_activities.RootSummary">

    <LinearLayout
        style="@style/checkDetailLayout"
        android:background="@color/colorTextLightGrey">

        <TextView
            style="@style/chequeTvLabel"
            android:layout_weight="1"
            android:text="Cheque Date" />

        <EditText
            android:id="@+id/etChequeDate"
            style="@style/chequeEtStyle"
            android:layout_weight="1"
            android:editable="false" />

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorTextBlue"
            android:onClick="onSubmit"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

</RelativeLayout>
